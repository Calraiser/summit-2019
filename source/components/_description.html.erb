<%
  text01 ||= true
  text02 ||= true
  text03 ||= true
  link02 ||= false
%>


<% item.each do |element| %>
  <div class="content">
    <p class="note">
      <%= element.note %>
    </p>
    <h2 class="bx--type-xl">
      <%= element.title %>
    </h2>
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <% if text01.present? %>
          <p class="description-text">
            <%= element.text01 %>
          </p>
        <% end %>

        <% if text02.present? %>
          <p class="description-text">
            <%= element.text02 %>
          </p>
        <% end %>
      </div>
      <div class="col-xs-12 col-md-6">
        <% if text03.present? %>
          <p class="description-text">
            <%= element.text03 %>
          </p>
        <% end %>
        <p class="description-actions">
          <span class="title">
            Sandbox URL:
          </span>
          <span class="description-link">
            <%= link_to element.link, element.link, target: '_blank' %>
          </span>

          <% if link02.present? %>
            <span class="description-link">
              <%= link_to element.link02, element.link02, target: '_blank' %>
            </span>
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <div class="info-icons">
    <div class="info-icons__content content">
      <% element.icons.each do |ico| %>
        <div class="col-xs-6 col-sm-4 col-md-4">
          <div class="info-icons__item">
            <div class="info-icons__image">
              <%= image_tag ico.icon %>
            </div>
            <p class="info-icons__title">
              <%= ico.title %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
